<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004D40"
    android:orientation="vertical"
    tools:context=".Principal">


    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/lblEntrada"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/lblResultado"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:height="0dp"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="570dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center_horizontal"

        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnAc"
                android:layout_width="180px"
                android:layout_height="50px"
                android:layout_margin="2dp"
                android:background="#00695C"
                android:text="@string/Label_AC"
                android:textColor="#FF5722"
                />

            <Button
                android:id="@+id/btn7"
                android:layout_width="180px"
                android:layout_height="50px"
                android:layout_margin="2dp"
                android:background="#00695C"
                android:text="@string/label_numero7"
                android:textColor="#FAFAFA"

                />

            <Button
                android:id="@+id/btn4"
                android:layout_width="180px"
                android:layout_height="50px"
                android:layout_margin="2dp"
                android:background="#00695C"
                android:text="@string/label_numero4"
                android:textColor="#FAFAFA" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="180px"
                android:layout_height="50px"
                android:layout_margin="2dp"
                android:background="#00695C"
                android:text="@string/label_numero1"
                android:textColor="#FAFAFA" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button

                android:id="@+id/btnDel"
                android:layout_width="180px"
                android:layout_height="50px"
                android:layout_margin="2dp"
                android:background="#00695C"
                android:text="@string/Label_DEL"
                android:textColor="#FF5722" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="180px"
                android:layout_height="50px"
                android:layout_margin="2dp"
                android:background="#00695C"
                android:text="@string/label_numero8"
                android:textColor="#FAFAFA"

                />

            <Button
                android:id="@+id/btn5"
                android:layout_width="180px"
                android:layout_height="50px"
                android:layout_margin="2dp"
                android:background="#00695C"
                android:text="@string/label_numero5"
                android:textColor="#FAFAFA" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="180px"
                android:layout_height="50px"
                android:layout_margin="2dp"
                android:background="#00695C"
                android:text="@string/label_numero2"
                android:textColor="#FAFAFA" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnMas"
                android:layout_width="180px"
                android:layout_height="50px"
                android:layout_margin="2dp"
                android:background="#00695C"
                android:text="@string/Label_coman3"
                android:textColor="#FF5722" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="180px"
                android:layout_height="50px"
                android:layout_margin="2dp"
                android:background="#00695C"
                android:text="@string/label_numero9"
                android:textColor="#FAFAFA" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="180px"
                android:layout_height="50px"
                android:layout_margin="2dp"
                android:background="#00695C"
                android:text="@string/label_numero6"
                android:textColor="#FAFAFA" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="180px"
                android:layout_height="50px"
                android:layout_margin="2dp"
                android:background="#00695C"
                android:text="@string/label_numero3"
                android:textColor="#FAFAFA" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/btnMenos"
                android:layout_width="180px"
                android:layout_height="50px"
                android:layout_margin="2dp"
                android:background="#00695C"
                android:text="@string/Label_coman4"
                android:textColor="#FF5722" />

            <Button
                android:id="@+id/btnMul"
                android:layout_width="180px"
                android:layout_height="50px"
                android:layout_margin="2dp"
                android:background="#00695C"
                android:text="@string/Label_coman5"
                android:textColor="#FF5722" />

            <Button
                android:id="@+id/btnDiv"
                android:layout_width="180px"
                android:layout_height="50px"
                android:layout_margin="2dp"
                android:background="#00695C"
                android:text="@string/Label_coman6"
                android:textColor="#FF5722" />

            <Button
                android:id="@+id/btnIgual"
                android:layout_width="180px"
                android:layout_height="50px"
                android:layout_margin="2dp"
                android:background="#00695C"
                android:text="@string/Label_coman7"
                android:textColor="#FF5722" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/btn0"
                android:layout_width="180px"
                android:layout_height="50px"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#00695C"
                android:text="@string/label_numero10"
                android:textColor="#FAFAFA"

                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/btnParIzq"
                android:layout_width="180px"
                android:layout_height="50px"
                android:text="@string/label_coman8"
                android:background="#00695C"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:textColor="#FAFAFA"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/btnParDer"
                android:layout_width="180px"
                android:layout_height="50px"
                android:text="@string/label_coman9"
                android:background="#00695C"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:textColor="#FAFAFA"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/btnPunto"
                android:layout_width="180px"
                android:layout_height="50px"
                android:text="@string/label_coman10"
                android:background="#00695C"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:textColor="#FF5722"/>
        </LinearLayout>



    </LinearLayout>


</LinearLayout>
